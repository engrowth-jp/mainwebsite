---
import logo from "../assets/images/logo.svg";
import envelope from "../assets/images/envelope.svg";
import BlockButton from "../components/BlockButton.astro";
import InlineButton from "../components/InlineButton.astro";
import Layout from "./Layout.astro";
export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<Layout title={title}>
	<slot />
	<div class="text-center mb-8">
		<InlineButton href={"/"}>企業トップへ</InlineButton>
	</div>
</Layout>
<style is:global>
	@import url("https://fonts.googleapis.com/css2?family=BIZ+UDPGothic&family=Shippori+Mincho+B1:wght@400;800&display=swap");

	html,
	body {
		height: 100%;
		margin: 0;
		padding: 0;
	}

	body {
		font-family: "BIZ UDPGothic", sans-serif;
		text-align: justify;
		display: flex;
		flex-direction: column;
		min-height: 100vh;
	}

	.container {
		padding-top: 4rem;
		padding-bottom: 4rem;
	}
</style>
