---
import logo from "../assets/images/logo.svg";
import envelope from "../assets/images/envelope.svg";
import LinkButton from "../components/LinkButton.astro";
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <header class="sticky top-0 bg-[rgba(255,255,255,0.8)]">
      <div
        id="header"
        class="relative lg:container flex justify-between items-center px-4 py-3"
      >
        <div class="title">
          <h1 class="text-2xl font-bold font-heading">
            <img src={logo} alt={title} class="h-8" />
          </h1>
        </div>

        <div>
          <LinkButton>
            <span class="hidden md:inline">お問い合わせ</span>
            <span class="md:hidden">
              <img src={envelope} alt="お問い合わせ" class="w-5" />
            </span>
          </LinkButton>
        </div>
      </div>
    </header>

    <slot />

    <footer class="bg-gray-900 text-white py-6">
      <div class="text-center">&copy; engrowth</div>
    </footer>
  </body>
</html>
<style is:global>
  @import url("https://fonts.googleapis.com/css2?family=BIZ+UDPGothic&family=Shippori+Mincho+B1:wght@400;800&display=swap");

  body {
    font-family: "BIZ UDPGothic", sans-serif;
    text-align: justify;
  }

  .container {
    padding-top: 4rem;
    padding-bottom: 4rem;
  }
</style>
